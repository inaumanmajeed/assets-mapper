{
  "name": "assets-mapper",
  "version": "1.2.0",
  "description": "CLI and utility to auto-generate an assets map from a folder for React and Next.js projects with recursive scanning and file watching.",
  "main": "lib/index.js",
  "bin": {
    "assets-mapper": "bin/assets-mapper.js"
  },
  "scripts": {
    "build": "npm run format && node build.js",
    "format": "prettier --write \"src/**/*.js\" \"bin/**/*.js\" \"*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"bin/**/*.js\" \"*.js\"",
    "prepublishOnly": "npm run build",
    "preuninstall": "node -e \"const {cleanupAssetsMap} = require('./lib/generator.js'); const fs = require('fs'); if (fs.existsSync('src/assets-map.js')) cleanupAssetsMap('src/assets-map.js'); if (fs.existsSync('assets-map.js')) cleanupAssetsMap('assets-map.js');\"",
    "prepare": "husky"
  },
  "keywords": [
    "assets",
    "images",
    "svg",
    "nextjs",
    "react",
    "assets-map",
    "assets-mapper",
    "cli"
  ],
  "author": "inaumanmajeed",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inaumanmajeed/assets-mapper.git"
  },
  "bugs": {
    "url": "https://github.com/inaumanmajeed/assets-mapper/issues"
  },
  "homepage": "https://github.com/inaumanmajeed/assets-mapper#readme",
  "dependencies": {
    "minimist": "^1.2.8"
  },
  "files": [
    "lib",
    "bin",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2"
  }
}
