{
  "name": "assets-mapper",
  "version": "2.2.0",
  "description": "CLI and utility to auto-generate an assets map from a folder for React and Next.js projects with recursive scanning, file watching, and advanced configuration.",
  "main": "lib/index.js",
  "bin": {
    "assets-mapper": "lib/bin/assets-mapper.js"
  },
  "scripts": {
    "build": "node build.js",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "assets",
    "images",
    "svg",
    "nextjs",
    "react",
    "assets-map",
    "assets-mapper",
    "cli"
  ],
  "author": "inaumanmajeed",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inaumanmajeed/assets-mapper.git"
  },
  "bugs": {
    "url": "https://github.com/inaumanmajeed/assets-mapper/issues"
  },
  "homepage": "https://github.com/inaumanmajeed/assets-mapper#readme",
  "dependencies": {
    "minimatch": "^10.0.0",
    "minimist": "^1.2.8"
  },
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "@types/minimatch": "^5.1.2",
    "@types/minimist": "^1.2.5",
    "typescript": "^5.9.3"
  }
}
